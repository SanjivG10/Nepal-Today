<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.techniary.nepaltoday.PersonalAccountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/personalAccountToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00C590">

    </android.support.v7.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView_personal_account"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/personalAccountToolbar"
        android:layout_marginTop="100dp"
        android:src="@drawable/default_avatar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bioGraphy"
        android:text=" My Bio "
        android:layout_below="@id/imageView_personal_account"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_personal_account"
        android:layout_height="wrap_content"
        android:layout_below="@id/bioGraphy"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        >


        <Button
            android:id="@+id/changePicButton_Personal_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/round_button"
            android:layout_marginRight="10dp"
            android:text="  Change Picture  " />

        <Button
            android:id="@+id/changeBioButton_Personal_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:textColor="#FFFFFF"
            android:text="  Change Quote  " />

    </LinearLayout>


</RelativeLayout>
