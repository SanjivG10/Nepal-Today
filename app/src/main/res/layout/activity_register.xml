<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.techniary.nepaltoday.RegisterActivity">

    <include layout="@layout/main_toolbar" android:id="@+id/register_activity_login_toolbar"/>


    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_activity_login_toolbar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Register Your Account"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        >


        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint=" Enter Your Email" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_input_email_register"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        >


        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Password "
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_confirm_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_input_password_register"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        >


        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Confirm Password "
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/register_button_register_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/text_input_confirm_password_register"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp"
        android:background="#9C27B0"
        android:text="Register"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/sign_in_button_register_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:background="#F44336 "
        android:inputType="textEmailAddress"
        android:text=" Already have an Account? Sign In "
        android:textColor="#FFFFFF" />


</RelativeLayout>
