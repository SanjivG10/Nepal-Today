<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context="com.techniary.nepaltoday.EditorChoiceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical"
        android:gravity="center"
        >

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/movies_card_view">

            >

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/circlelayoutyellow"

                    >

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/video_library"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movies"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        />


                </LinearLayout>


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView

            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/BBC_news_card_view"
            >

            <LinearLayout
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/circlelayoutgreen"

                >

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/info_icon"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BBC News"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    />


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fabForPost"
            android:layout_gravity="bottom"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/plus_button_post"
            />

    </RelativeLayout>


</FrameLayout>
